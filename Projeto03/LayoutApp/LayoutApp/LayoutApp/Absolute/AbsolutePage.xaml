<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutApp.Absolute.AbsolutePage"
             Title="Absolute Layout">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView AbsoluteLayout.LayoutBounds="0, 0, 200, 100" 
                     BackgroundColor="Red"/>
            <BoxView AbsoluteLayout.LayoutBounds="50, 50, 100, 100" 
                     BackgroundColor="Green"/>
            <BoxView AbsoluteLayout.LayoutBounds="0, 150, 50, 50" 
                     BackgroundColor="Blue"/>

            <BoxView AbsoluteLayout.LayoutFlags="WidthProportional"
                     AbsoluteLayout.LayoutBounds="0, 400, 0.8, 100" 
                     BackgroundColor="Orange"/>

            <BoxView AbsoluteLayout.LayoutFlags="SizeProportional"
                     AbsoluteLayout.LayoutBounds="0, 300, 0.5, 0.5" 
                     BackgroundColor="DeepPink"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>