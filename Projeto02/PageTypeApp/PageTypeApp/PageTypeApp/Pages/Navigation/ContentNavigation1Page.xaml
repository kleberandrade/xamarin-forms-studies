<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PageTypeApp.Pages.Navigation.ContentNavigation1Page"
             Title="Titulo da Navigation 1">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="P" Icon="xamarin.png"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Eu sou a página 1"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Ir para Página 2"
                    Clicked="OnChangePage" />

            <Button Text="Ir para Master"
                    Clicked="OnChangeMasterPage" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>